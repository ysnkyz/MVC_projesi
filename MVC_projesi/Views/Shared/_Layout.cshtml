        </nav>
        <!-- Left navbar-header -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse slimscrollsidebar">
                <ul class="nav" id="side-menu">
                    <li class="sidebar-search hidden-sm hidden-md hidden-lg">
                        <!-- input-group -->
                        <div class="input-group custom-search-form">
                            <input type="text" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"> <i class="fa fa-search"></i> </button>
                            </span>
                        </div>
                        <!-- /input-group -->
                    </li>
                    <li class="user-pro">
                        <a href="#" class="waves-effect"><img src="~/Content/image/kullanici.png" alt="user-img" class="img-circle"> <span class="hide-menu"> @Request.Cookies["uye"]["Ad"]  @Request.Cookies["uye"]["Soyad"]<span class="fa arrow"></span></span></a>
                        <ul class="nav nav-second-level">

                            <li><a href="@Url.Action("ProfilBilgilerimiGuncelle", "Uyelik")"><i class="fa fa-power-off"></i>Profil Bilgilerimi Güncelle</a></li>
                            <li><a href="@Url.Action("CikisYap", "Giris")"><i class="fa fa-power-off"></i> Çıkış yap</a></li>
                        </ul>
                    </li>
                    <li class="nav-small-cap m-t-10">--- Menüler</li>
                    <li>
                        <a href="@Url.Action("Index", "Istatistik")" class="waves-effect"><i class="linea-icon linea-basic fa-fw" data-icon="v"></i>İstatistikler </a>
                    </li>
                    <li>
