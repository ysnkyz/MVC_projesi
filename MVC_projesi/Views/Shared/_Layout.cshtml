        <!-- /#wrapper -->

        <script src="~/Scriptler/jquery.min.js"></script>
        <script src="~/Scriptler/bootstrap.min.js"></script>
        <script src="~/Scriptler/sidebar-nav.min.js"></script>
        <script src="~/Scriptler/jquery.slimscroll.js"></script>
        <script src="~/Scriptler/waves.js"></script>
        <script src="~/Scriptler/jquery.flot.js"></script>
        <script src="~/Scriptler/jquery.flot.tooltip.min.js"></script>
        <script src="~/Scriptler/jquery-jvectormap-2.0.2.min.js"></script>
        <script src="~/Scriptler/jquery-jvectormap-world-mill-en.js"></script>
        <script src="~/Scriptler/jquery.sparkline.min.js"></script>
        <script src="~/Scriptler/jquery.easypiechart.min.js"></script>
        <script src="~/Scriptler/easy-pie-chart.init.js"></script>
        <script src="~/Scriptler/custom.js"></script>
        <script src="~/Scriptler/dashboard2.js"></script>
        <script src="~/Scriptler/jQuery.style.switcher.js"></script>
        <script src="~/Scriptler/jquery.dataTables.min.js"></script>
        <script src="~/Scriptler/dataTables.buttons.min.js"></script>
        <script src="~/Scriptler/buttons.flash.min.js"></script>
        <script src="~/Scriptler/jszip.min.js"></script>
        <script src="~/Scriptler/pdfmake.min.js"></script>
        <script src="~/Scriptler/vfs_fonts.js"></script>
        <script src="~/Scriptler/buttons.html5.min.js"></script>
        <script src="~/Scriptler/buttons.print.min.js"></script>

        <script>
            $(document).ready(function () {
                // Setup - add a text input to each footer cell
                $('#example tfoot th').each(function () {
                    var title = $(this).text();
                    $(this).html('<input type="text" placeholder="Search ' + title + '" />');
                });

                // DataTable
                var table = $(document).ready(function () {
                    $('#example').DataTable({
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel', 'pdf', 'print'
                        ]
                    });

                    // Apply the search
                    this.api().columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change clear', function () {
                            if (that.search() !== this.value) {
                                that.search(this.value).draw();
                            }
                        });
                    });
                });
            });

        </script>
        <script src="~/Scriptler/Main.js"></script>
        @RenderSection("script", false)
        <script src="~/Scriptler/sweetalert2.min.js"></script>


    </div>
</body>
</html>


